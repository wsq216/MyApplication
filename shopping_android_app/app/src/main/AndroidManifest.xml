<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shopping_android_app">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".app.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".ui.my.UserDetailActivity" />
        <activity android:name=".ui.shop.UpdateActivity" />
        <activity android:name=".ui.shop.AddressActivity" />
        <activity android:name=".dao.DbActivity" />
        <activity android:name=".ui.shop.AcquisitionActivity" />
        <activity android:name=".ui.register.RegisterActivity" />
        <activity android:name=".ui.login.LoginActivity" />
        <activity android:name=".ui.details.BigImageActivity" />
        <activity android:name=".ui.dashboard.BreadItemActivity" />
        <activity android:name=".ui.dashboard.BrandActivity" />
        <activity android:name=".ui.channel.CategoryActivity" />
        <activity android:name=".ui.home.HotGoodActivity" />
        <activity android:name=".ui.details.CarActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".ViewPagerActivity"/>
        <activity
            android:name=".PagerActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>