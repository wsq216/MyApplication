<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="vmBrand"
            type="com.example.myapplication.data.Brand" />
    </data>

    <FrameLayout
        android:orientation="vertical"
        android:id="@+id/liner"
        android:background="#ECE4E4"
        android:layout_marginBottom="@dimen/dp_2"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_100">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_menu_me_nor"
            android:scaleType="fitXY"
            android:id="@+id/new_pic_url"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{vmBrand.name}"
            android:layout_margin="@dimen/dp_8"
            android:textSize="@dimen/sp_12"
            android:id="@+id/name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{vmBrand.floor_price}"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_28"
            android:textSize="@dimen/sp_10"
            android:id="@+id/floor_price" />


    </FrameLayout>
</layout>